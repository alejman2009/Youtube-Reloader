{
  "manifest_version": 3,
  "name": "YouTube Reloader",
  "version": "1.1",
  "description": "Recarga YouTube cuando detecta eventos",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "*://*.youtube.com/*" ],
      "js": [ "content.js" ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "misc/youTubeReloader16.png",
      "48": "misc/youTubeReloader48.png",
      "128": "misc/youTubeReloader128.png"
    }
  },
  "icons": {
    "16": "misc/youTubeReloader16.png",
    "48": "misc/youTubeReloader48.png",
    "128": "misc/youTubeReloader128.png"
  }
}